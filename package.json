{
  "name": "webpack-watchman-plugin",
  "version": "1.1.0",
  "description": "A webpack plugin that integrates watchman as its watcher.",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "coverage": "nyc report --reporter=json && codecov -f coverage/coverage-final.json",
    "build": "babel src --out-dir lib",
    "flow": "flow",
    "format": "prettier --write --trailing-comma all --single-quote \"src/**/*.js\" \"test/*.js\" \"test/helpers/**/*.js\"",
    "lint": "eslint src",
    "precommit": "lint-staged",
    "prepublish": "yarn run clean && cross-env NODE_ENV=production yarn run build",
    "preversion": "yarn test",
    "test": "yarn run lint && yarn run flow && yarn run test-only",
    "test-only": "cross-env NODE_ENV=test nyc --reporter=json --reporter=text ava test/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/researchgate/webpack-watchman-plugin.git"
  },
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=4.0.0"
  },
  "keywords": [
    "webpack",
    "watchman",
    "researchgate",
    "facebook",
    "watch",
    "plugin"
  ],
  "author": "Daniel Tschinder <daniel@tschinder.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/researchgate/webpack-watchman-plugin/issues"
  },
  "homepage": "https://github.com/researchgate/webpack-watchman-plugin#readme",
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-cli": "^6.9.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-preset-env": "^1.2.1",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.11.6",
    "cross-env": "^5.0.0",
    "eslint": "^4.1.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "flow-bin": "^0.52.0",
    "fs-extra": "^4.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.2",
    "nyc": "^11.0.3",
    "prettier": "^1.3.1",
    "rimraf": "^2.5.2"
  },
  "dependencies": {
    "async": "^2.0.0",
    "debug": "^3.0.0",
    "fb-watchman": "^2.0.0"
  },
  "lint-staged": {
    "test/*.js": [
      "prettier --trailing-comma all --single-quote --write",
      "git add"
    ],
    "test/helpers/**/*.js": [
      "prettier --trailing-comma all --single-quote --write",
      "git add"
    ],
    "src/**/*.js": [
      "prettier --trailing-comma all --single-quote --write",
      "git add"
    ]
  },
  "ava": {
    "babel": "inherit"
  },
  "nyc": {
    "all": true,
    "include": [
      "src"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
