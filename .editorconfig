# http://EditorConfig.org
# top-most EditorConfig file
root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false

[*.{js,scss}]
charset = utf-8
indent_style = space
insert_final_newline = true

[*.js]
indent_size = 4

[*.scss]
indent_size = 2

[{*.json,.travis.yml,.*rc}]
indent_style = space
indent_size = 2
